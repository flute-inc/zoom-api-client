# Editor configuration, see http://editorconfig.org
root = true

# General
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Readme
[*.md]
max_line_length = 80
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2
